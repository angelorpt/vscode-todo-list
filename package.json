{
	"name": "vs-todo-list",
	"displayName": "vs-todo-list",
	"description": "a simple taskpaper utility",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.toggleDone",
				"title": "toggle @done"
			}
		],
		"languages": [
			{
				"id": "todo",
				"aliases": [
					"Todo",
					"Todos"
				],
				"extensions": [
					"TODO",
					"todo",
					"todo.txt",
					"todo.md",
					".todo",
					".todos",
					".taskpaper"
				]
			}
		],
		"keybindings": [
      {
        "command": "extension.toggleDone",
        "key": "Alt+d",
        "when": "editorTextFocus && editorLangId == todo"
			},
      {
        "command": "extension.newLine",
        "key": "Shift+Enter",
        "when": "editorTextFocus && editorLangId == todo"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
